<h1> Create an article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @article do |g| %>
  <p>
    <%= g.label :title %><br>
    <%= g.text_field :title %>
  </p>
  <p>
    <%= g.label :desc %><br>
    <%= g.text_area :desc %>
  </p>
  <p>
    <%= g.submit %>
  </p>
<% end %>